{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "archivist_review_packet (v3.3)",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "promote",
        "archive",
        "revise",
        "reject"
      ]
    },
    "entries": {
      "type": "array",
      "items": {
        "$ref": "#/defs/EntryRef"
      }
    },
    "diff_summary": {
      "type": "string"
    },
    "ops_checks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "proposed_canon_hash": {
      "type": "string"
    },
    "submitted_by": {
      "type": "string"
    },
    "submitted_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "action",
    "entries",
    "submitted_by"
  ],
  "defs": {
    "EntryRef": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "status_from": {
          "type": "string"
        },
        "status_to": {
          "type": "string"
        }
      },
      "required": [
        "slug",
        "type"
      ]
    }
  }
}